{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Obot",
  "version": "0.1.0",
  "identifier": "com.obot.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "resizable": true,
        "titleBarStyle": "Overlay",
        "decorations": true,
        "title": "",
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
